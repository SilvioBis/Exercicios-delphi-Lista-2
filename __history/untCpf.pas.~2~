unit untCpf;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Mask, Vcl.Buttons,
  Vcl.ExtCtrls, Vcl.Imaging.pngimage;

type
  Tformcpf = class(TForm)
    edtCPF: TMaskEdit;
    btnVerf: TBitBtn;
    btnLimpar: TBitBtn;
    btnFechar: TBitBtn;
    Image1: TImage;
    Label1: TLabel;
    procedure btnLimparClick(Sender: TObject);
    procedure btnVerfClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  formcpf: Tformcpf;

implementation

{$R *.dfm}

procedure Tformcpf.btnLimparClick(Sender: TObject);
begin
  edtCPF.Clear;
  edtCPF.SetFocus;
end;

procedure Tformcpf.btnVerfClick(Sender: TObject);
var n1,n2,n3,n4,n5,n6,n7,n8,n9:integer;
    d1,d2: integer;
    cpf,digitado,calculado:string;
begin
   cpf := edtCPF.text;
   n1 := StrToint(cpf[1]);
   n2 := StrToint(cpf[2]);
   n3 := StrToint(cpf[3]);
   n4 := StrToint(cpf[4]);
   n5 := StrToint(cpf[5]);
   n6 := StrToint(cpf[6]);
   n7 := StrToint(cpf[7]);
   n8 := StrToint(cpf[8]);
   n9 := StrToint(cpf[9]);
   d1 :=n9*2+n8*3+n7*4+n6*5+n5*6+n4*7+n3*8+n2*9+n1*10;
   d1 := 11 - (d1 mod 11);
   if d1 >= 10  then
   d1 :=0;

   d2 := d1*2+n9*3+n8*4+n7*5+n6*6+n5*7+n4*8+n3*9+n2*10+n1*11;
   d2 := 11 - (d2 mod 11);
   if d2 >= 10  then
   d2 := 0;
   calculado := IntToStr(d1)+ IntToStr(d2);
   digitado := cpf[10] +cpf[11];
   if calculado = digitado then
   Application.MessageBox('CPF Válido!','Atenção',MB_OK+MB_ICONASTERISK)
   else
   Application.MessageBox('CPF Inválido!','Atenção',MB_OK+MB_ICONERROR);
end;

end.
